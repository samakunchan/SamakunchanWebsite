<h1>Certif</h1>
<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_errors(form.title) }}
        {{ form_label(form.title, 'Titre') }}
        {{ form_widget(form.title) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.certifNumber) }}
        {{ form_label(form.certifNumber, 'Numéro de série') }}
        {{ form_widget(form.certifNumber) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.url) }}
        {{ form_label(form.url, 'Lien de la certification') }}
        {{ form_widget(form.url) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.image) }}
        {{ form_label(form.image, 'Ajouter une image') }}
        {{ form_widget(form.image) }}
    </div>

    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>