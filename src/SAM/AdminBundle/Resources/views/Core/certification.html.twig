{% extends "SAMCoreBundle::layout.html.twig" %}
{% block body %}
    <h1 class="text-center">Ajout des certificats de réussite</h1>
<div class="well form-control samaGrey1">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-lg-6 bg-info p-2">
            <div class="form-control">
                {{ form_errors(form.title) }}
                {{ form_label(form.title, 'Titre') }}
                {{ form_widget(form.title) }}
            </div>
            <div class="form-control">
                {{ form_errors(form.certifNumber) }}
                {{ form_label(form.certifNumber, 'Numéro de série') }}
                {{ form_widget(form.certifNumber) }}
            </div>
            <div class="form-group form-control">
                {{ form_errors(form.url) }}
                {{ form_label(form.url, 'URL') }}
                {{ form_widget(form.url) }}
            </div>
        </div>

        <div class="col-lg-6 bg-info p-2">
            <div class="form-control">
                {{ form_errors(form.image) }}
                {{ form_label(form.image, 'Ajouter une image')}}
                {{ form_widget(form.image) }}
            </div>
            <div class="form-control">
                {{ form_errors(form.tag) }}
                {{ form_label(form.tag, 'Ajouter un tag')}}
                {{ form_widget(form.tag) }}
            </div>

            <div class="form-control">
                {{ form_errors(form.technologies) }}
                {{ form_label(form.technologies, 'Technologies', {'label_attr': {'style': 'font-weight: bold'}}) }}
                {{ form_widget(form.technologies) }}
                <a href="#" id="add_technology" class="btn btn-default">Ajouter une technologie</a>
            </div>
        </div>
        <div class="d-block mx-auto">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block js %}
    {% javascripts '@SAMCoreBundle/Resources/public/js/technoCertif.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
