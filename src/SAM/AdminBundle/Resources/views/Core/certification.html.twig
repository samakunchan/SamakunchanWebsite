{% extends "SAMCoreBundle::layout.html.twig" %}
{% block body %}
    <h1>Certif</h1>
    <div class="well form-control">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_errors(form.title) }}
            {{ form_label(form.title, 'Titre') }}
            {{ form_widget(form.title) }}
        </div>

        <div class="form-group">
            {{ form_errors(form.certifNumber) }}
            {{ form_label(form.certifNumber, 'Numéro de série') }}
            {{ form_widget(form.certifNumber) }}
        </div>

        <div class="form-group">
            {{ form_errors(form.url) }}
            {{ form_label(form.url, 'Lien de la certification') }}
            {{ form_widget(form.url) }}
        </div>

        <div class="form-group">
            {{ form_errors(form.image) }}
            {{ form_label(form.image, 'Ajouter une image') }}
            {{ form_widget(form.image) }}
        </div>

        <div class="form-group">
            {{ form_errors(form.tag) }}
            {{ form_label(form.tag, 'Ajouter un tag') }}
            {{ form_widget(form.tag) }}
        </div>

        <div class="form-group">
            {{ form_errors(form.technologies) }}
            {{ form_label(form.technologies, 'Ajouter une technologie') }}
            {{ form_widget(form.technologies) }}
            <a href="#" id="add_technology" class="btn btn-default">Ajouter une technologie</a>
        </div>
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block js %}
    {% javascripts '@SAMCoreBundle/Resources/public/js/technoCertif.js' output='js/compiled/main.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
